                                    <ColorAnimation To="{StaticResource VeryLightGrey}" Duration="0:0:0.15" 
                                                    Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" />
                                </Storyboard>
                            </BeginStoryboard>
                            
                            <!-- Foreground -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="Black" Duration="0:0:0.15" 
                                                    Storyboard.TargetProperty="Foreground.Color" />
                                </Storyboard>
