    <!--#region RadioButton Base Style-->
    <Style TargetType="{x:Type RadioButton}">
        <Setter Property="FontFamily" Value="{StaticResource LatoLight}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource DarkGreyBrush}"/>
        <Setter Property="local:FormMessageProperty.Value" Value="None"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <StackPanel Background="White" Orientation="Horizontal">

                        <!-- Radio -->
                        <Grid Height="16" Width="16">
                            <Border Name="RadioOuter" Background="Transparent" BorderBrush="{StaticResource DarkGreyBrush}" BorderThickness="1" CornerRadius="16" />
                            <Border Name="RadioMark" CornerRadius="8" Margin="4" Background="{StaticResource DarkGreyBrush}" Visibility="Hidden" />
                        </Grid>

                        <!-- Text  -->
                        <TextBlock Name="Text" Margin="5 0 5 0" FontFamily="{TemplateBinding FontFamily}" FontSize="{TemplateBinding FontSize}" 
                                   Foreground="{TemplateBinding Foreground}" Text="{TemplateBinding Content}" />
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="true">
                            <!-- If item is checked set Visibility of a RadioMark to Visible -->
                            <Setter TargetName="RadioMark" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- GotFocus animations -->
                        <EventTrigger RoutedEvent="GotFocus">
                            <!-- RadioOuter -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="{StaticResource ButtonGreen}" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="RadioOuter" Storyboard.TargetProperty="BorderBrush.Color" />
                                </Storyboard>
                            </BeginStoryboard>

                            <!-- RadioMark -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="{StaticResource ButtonGreen}" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="RadioMark" Storyboard.TargetProperty="Background.Color" />
                                </Storyboard>
                            </BeginStoryboard>

                            <!-- Text -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="{StaticResource ButtonGreen}" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="Text" Storyboard.TargetProperty="Foreground.Color" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- LostFocus animations -->
                        <EventTrigger RoutedEvent="LostFocus">
                            <!-- RadioOuter -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="{StaticResource DarkGrey}" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="RadioOuter" Storyboard.TargetProperty="BorderBrush.Color" />
                                </Storyboard>
                            </BeginStoryboard>

                            <!-- RadioMark -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="{StaticResource DarkGrey}" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="RadioMark" Storyboard.TargetProperty="Background.Color" />
                                </Storyboard>
                            </BeginStoryboard>

                            <!-- Text -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="{StaticResource DarkGrey}" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="Text" Storyboard.TargetProperty="Foreground.Color" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- FormMessageProperty animations -->
                        <Trigger Property="local:FormMessageProperty.Value" Value="None">

                            <!-- When FormMessageProperty is other than None -->
                            <Trigger.ExitActions>

                                <!-- RadioOuter -->
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="Red" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="RadioOuter" Storyboard.TargetProperty="BorderBrush.Color" />
                                    </Storyboard>
                                </BeginStoryboard>

                                <!-- RadioMark -->
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="Red" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="RadioMark" Storyboard.TargetProperty="Background.Color" />
                                    </Storyboard>
                                </BeginStoryboard>

                                <!-- Text -->
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="Red" Duration="0:0:0.2" 
                                                    Storyboard.TargetName="Text" Storyboard.TargetProperty="Foreground.Color" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>

                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

</ResourceDictionary>