                                   FontSize="{TemplateBinding FontSize}" Text="{TemplateBinding Content}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Mouse enter animation -->
                        <EventTrigger RoutedEvent="MouseEnter">
                            <!-- Background -->
