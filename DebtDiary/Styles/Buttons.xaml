                                <Storyboard>
                                    <ColorAnimation To="{StaticResource DarkGreyHover}" Duration="0:0:0.15" 
                                                    Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!-- Mouse leave animation -->
                        <EventTrigger RoutedEvent="MouseLeave">
                            <!-- Background -->
