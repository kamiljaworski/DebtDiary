<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DebtDiary"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Custom Fonts -->
    <FontFamily x:Key="LatoLight">pack://appliction;,,,/Fonts/#Lato Light</FontFamily>
    <FontFamily x:Key="LatoThin">pack://appliction;,,,/Fonts/#Lato Thin</FontFamily>
    <FontFamily x:Key="LatoRegular">pack://appliction;,,,/Fonts/#Lato Regular</FontFamily>
    <FontFamily x:Key="LatoSemiBold">pack://appliction;,,,/Fonts/#Lato Semibold</FontFamily>
    <FontFamily x:Key="LatoBold">pack://appliction;,,,/Fonts/#Lato Bold</FontFamily>
    <FontFamily x:Key="Segoe-MDL2">pack://appliction;,,,/Fonts/#Segoe MDL2 Assets</FontFamily>
    
    <!-- Custom Font Sizes -->
    <system:Double x:Key="WindowControlIconFontSize">10</system:Double>
    <system:Double x:Key="SmallFontSize">14</system:Double>
    
    <!-- Custom Icon Strings -->
    <system:String x:Key="MinimizeIcon">&#xE921;</system:String>
    <system:String x:Key="MaximizeIcon">&#xE922;</system:String>
    <system:String x:Key="RestoreIcon">&#xE923;</system:String>
    <system:String x:Key="CloseIcon">&#xE8BB;</system:String>

</ResourceDictionary>