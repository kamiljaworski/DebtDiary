<Page x:Class="DebtDiary.DebtorInfoSubpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DebtDiary"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="1000"
      Title="DebtorInfoSubpage">

    <Grid Grid.Column="1" Background="#e5e5e5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="4" Text="{Binding FullName, FallbackValue='Jan Kowalski'}" FontSize="40" FontFamily="{StaticResource LatoLight}" VerticalAlignment="Center" Padding="10 0 0 0"/>

        <Grid Grid.Row="1" Grid.Column="0" Background="#8bc34a" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#7aab41">
                <TextBlock Text="&#xEADF;" Foreground="White" FontFamily="{StaticResource Segoe-MDL2}" FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="Jest ci winny" Foreground="White" FontSize="18"/>
                <TextBlock Text="{Binding Debt, FallbackValue='100.00'}" Foreground="White" FontSize="30"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Background="#ff9800" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#e08600">
                <TextBlock Text="&#xE902;" Foreground="White" FontFamily="{StaticResource Segoe-MDL2}" FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="Liczba dłużników" Foreground="White" FontSize="18"/>
                <TextBlock Text="2" Foreground="White" FontSize="36"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" Background="#00bcd4" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#00a5ba">
                <TextBlock Text="&#xE82D;" Foreground="White" FontFamily="{StaticResource Segoe-MDL2}" FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="Liczba operacji" Foreground="White" FontSize="18"/>
                <TextBlock Text="{Binding OperationsNumber, FallbackValue=4}" Foreground="White" FontSize="36"/>
            </StackPanel>

        </Grid>


        <Grid Grid.Row="1" Grid.Column="3" Background="#e91e63" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#cd1a57">
                <TextBlock Text="&#xE82E;" Foreground="White" FontFamily="{StaticResource Segoe-MDL2}" FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="Ostatnia operacja" Foreground="White" FontSize="18"/>
                <TextBlock Text="{Binding LastOperation, TargetNullValue='brak', FallbackValue='-200.00'}" Foreground="White" FontSize="32"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"  Background="White" Margin="10">
            <Grid Margin="10">
                <lvc:CartesianChart Series="{Binding SeriesCollection}">
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Sales" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Month"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </Grid>
        </Grid>
        <!--<Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"  Background="White" Margin="10"/>-->

        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"  Background="White" Margin="10">

            <TextBlock Text="Ostatnie operacje" FontSize="28" FontFamily="{StaticResource LatoLight}" Padding="10 0 0 0"/>

            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0 0 0 1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"  Text="Na samochód" FontSize="18" Foreground="Gray"/>
                        <TextBlock Grid.Column="1"  Text="-20 000.00 zł" FontSize="18" Foreground="Red"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0 0 0 1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Na coś tam" FontSize="18" Foreground="Gray"/>
                        <TextBlock Grid.Row="1" Grid.Column="12" Text="-20.00 zł" FontSize="18" Foreground="Red"/>
                    </Grid>
                </Border>

                <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0 0 0 1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Za samochód" FontSize="18" Foreground="Gray"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="20 000.00 zł" FontSize="18" Foreground="Green"/>
                    </Grid>
                </Border>

                <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="0 0 0 1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Za coś tam" FontSize="18" Foreground="Gray"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="20.00 zł" FontSize="18" Foreground="Green"/>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Background="White" Margin="10">
            <TextBlock Text="Pożyczka" FontSize="28" FontFamily="{StaticResource LatoLight}" Padding="10 0 0 0"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Margin="0 10 0 0">
                    <!-- Gender -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Kto pożyczył?" Style="{StaticResource FormMessageTitleTextBlock}" 
                               Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                       local:FormMessageProperty.Value="{Binding GenderMessage}"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="On" 
                             IsChecked="{Binding Gender, Converter={local:GenderToBolleanConverter}, ConverterParameter='Male'}"
                             local:FormMessageProperty.Value="{Binding GenderMessage}"/>
                                <RadioButton Content="Ty" Margin="10 0 0 0"
                             IsChecked="{Binding Gender, Converter={local:GenderToBolleanConverter}, ConverterParameter='Female'}"
                             local:FormMessageProperty.Value="{Binding GenderMessage}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Last Name-->
                    <TextBox Text="{Binding LoanValue}" Tag="Kwota"
                         local:FormMessageProperty.Value="{Binding LastNameMessage}"/>

                    <TextBox Text="{Binding LoanDescription}" Tag="Opis"
                         local:FormMessageProperty.Value="{Binding LastNameMessage}"/>

                    <Button Content="Dodaj" HorizontalAlignment="Center" Margin="0 10 0 0"
                            Command="{Binding AddLoanCommand}"/>
                </StackPanel>
            </Grid>







        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Background="White" Margin="10">
            <TextBlock Text="Spłata" FontSize="28" FontFamily="{StaticResource LatoLight}" Padding="10 0 0 0"/>

        </StackPanel>

    </Grid>
</Page>
